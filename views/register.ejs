<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Join the Culinary Adventure!</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">Create Your Account and Get Cooking</p>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-9 log-form">
    <div
      class="alert alert-warning"
      id="reg-alert"
      style="display: none"
      role="alert"
    >
      This is a danger alertâ€”check it out!
    </div>
    <%-
    include('./components/alertComponent.ejs',{infoSuccessMessage,infoFailureMessage})
    %> <% if(step ===1){ %>
    <form id="reg-form" action="/user/register" method="POST">
      <div class="row g-3">
        <div class="col-12">
          <label for="userName" class="form-label">Username</label>
          <input
            type="text"
            name="userName"
            id="reg-userName"
            required
            class="form-control"
          />
          <p>
            <small style="font-size: 0.8rem; color: #757575"
              >special characters like @, #, $, %, etc. not allowed</small
            >
          </p>
        </div>
        <div class="col-12">
          <label for="firstName" class="form-label">First name</label>
          <input
            type="text"
            name="firstName"
            id="reg-firstName"
            required
            class="form-control"
          />
        </div>
        <div class="col-12">
          <label for="lastName" class="form-label">Last name</label>
          <input
            type="text"
            name="lastName"
            id="reg-lastName"
            required
            class="form-control"
          />
        </div>
        <div class="col-12">
          <label for="email" class="form-label">email</label>
          <input
            type="email"
            name="email"
            id="reg-email"
            required
            class="form-control"
          />
        </div>
        <div class="col-12">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            id="reg-password"
            required
            class="form-control"
            minlength="6"
          />
          <p>
            <small style="font-size: 0.8rem; color: #757575"
              >min limit 6 characters</small
            >
          </p>
        </div>
        <div class="col-12">
          <label for="conPassword" class="form-label">Confirm Password</label>
          <input
            type="password"
            name="conPassword"
            id="reg-conPassword"
            required
            class="form-control"
            minlength="6"
          />
        </div>

        <div class="mt-4">
          <button type="submit" class="col-12 mb-2 btn btn-res btn-lg px-4">
            Register
          </button>
        </div>
        <p>
          already have an account?
          <span><a href="/user/login" class="fw-bold">Log in</a></span>
        </p>
      </div>
    </form>
    <% } %> <% if(step ===2){ %> <%-
    include('./components/otpVerificationComponent.ejs',{action:"/user/otp-register"
    ,email})%> <% } %>
  </div>
</div>
