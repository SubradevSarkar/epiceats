<% if(typeof category !== 'undefined' && category.length>0){ %>
<h1 class="pd-4"><%- categoryId %></h1>
<% } else { %>
<h1 class="pd-4">Categories</h1>
<% } %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">
      <a href="/categories">Categories</a>
    </li>
    <% if(typeof category !== 'undefined' && category.length>0){ %>
    <li class="breadcrumb-item active" aria-current="page">
      <%- categoryId %>
    </li>
    <% } %>
  </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
  <% if(typeof categories !== 'undefined' && categories.length>0) { %> <%
  categories.forEach((category,index)=>{ %>

  <a
    href="/categories/<%- category.name %>"
    class="col text-center category_link"
  >
    <div class="category_img shadow">
      <img
        src="img/<%- category.image %>"
        loading="lazy"
        alt="<%- category.name %>"
      />
    </div>
    <div class="pt-1"><%- category.name %></div>
  </a>

  <%})%> <% } %>
</div>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(typeof category !== 'undefined' && category.length>0){ %> <%
  category.forEach((recipe,index) => {%>

  <a href="/recipe/<%-recipe._id%>" class="col text-center category_link">
    <div class="category_img category_img--large shadow">
      <%- include('./components/recipeImageComponent.ejs',{recipe})%>
    </div>
    <div class="pt-1"><%- recipe.name%></div>
  </a>

  <%}) %> <% } %>
</div>
