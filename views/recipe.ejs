<% if(recipe != null) {%>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">
      <%- recipe.name %>
    </li>
  </ol>
</nav>

<div class="row">
  <div class="col-12 col-md-4">
    <%- include('./components/recipeImageComponent.ejs',{recipe})%>
  </div>
  <div class="col-12 col-md-8" style="position: relative">
    <div class="row">
      <div class="col-12 d-flex justify-content-between align-items-start">
        <h1><%- recipe.name %></h1>
        <% if(user?._id && `${user?._id}` === `${recipe?.userId}`){ %>
        <%-include('./components/myRecipeEditMenuComponent.ejs',{recipe}) -%>
        <%} %>
      </div>
      <div class="col-12 mb-4">
        <i class="bi bi-tag"> <%- recipe.category %></i>
      </div>
      <div class="col-12" style="white-space: pre-line">
        <h4>Cooking Instruction</h4>
        <%- recipe.description %>
      </div>
    </div>
    <div class="row pt-4">
      <div class="col-12">
        <h4>Ingredients</h4>
        <ul class="list-group list-group-flush">
          <% recipe.ingredients.forEach((item) => { %>
          <li class="list-group-item"><%- item %></li>
          <% })%>
        </ul>
      </div>
    </div>
  </div>
</div>

<% } else {%>
<div class="d-flex flex-column justify-content-center align-items-center">
  <p>Item not found</p>
</div>
<% } %>
