<!-- Hero section -->
<div class="hero row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
  <div class="col-12 col-lg-6">
    <img
      src="/img/food.png"
      class="d-block mx-lg-auto img-fluid"
      height="300"
      alt="food-image"
      loading="lazy"
    />
  </div>
  <div class="col-12 col-lg-6">
    <h1 class="display-5 fw-bold mb-3">
      Spice Up Your <br />
      Palate with Epiceats
    </h1>
    <p class="lead">
      Welcome to EpicEats, where the art of cooking meets the joy of discovery.
      Prepare to embark on a gastronomic journey that will tantalize your taste
    </p>
    <div class="d-grid gap-2 d-md-flex">
      <a
        href="/explore-latest"
        class="btn btn-primary btn-dark btn-lg px-4 me-md-2"
      >
        Explore latest
        <img class="ms-2" src="/img/Arrow.svg" alt="" />
      </a>
      <a href="/submit-recipe" class="smb-btn btn btn-lg py-10">
        <u>Submit recipe</u>
      </a>
    </div>
  </div>
</div>

<!-- Categories -->
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
  <% if(categories !='' ) { %> <% categories.forEach((category,index)=>{ %>

  <a
    href="/categories/<%- category.name %>"
    class="col text-center category_link"
  >
    <div class="category_img shadow">
      <img
        src="/img/<%- category.image %>"
        loading="lazy"
        alt="<%- category.name %>"
      />
    </div>
    <div class="pt-1"><%- category.name %></div>
  </a>

  <%})%> <% } %>

  <a href="/categories" class="col text-center category_link">
    <div class="category_img shadow">
      <img src="/img/more.png" loading="lazy" alt="iew all" />
    </div>
    <div class="pt-1">view all</div>
  </a>
</div>

<!-- Latest recipes -->
<section class="pb-4 pt-4">
  <div class="d-flex mb-2 align-items-center">
    <h2>Latest Recipes</h2>
    <a href="/explore-latest" class="ms-auto">View More</a>
  </div>

  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if(food.latestRecipes != ''){ %> <%
    food.latestRecipes.forEach((recipe,index) => {%>

    <a href="/recipe/<%-recipe._id%>" class="col text-center category_link">
      <%- include('./components/recipeImageComponent.ejs',{recipe})%>
      <div class="pt-1"><%- recipe.name%></div>
    </a>

    <%}) %> <% } %>
  </div>
</section>

